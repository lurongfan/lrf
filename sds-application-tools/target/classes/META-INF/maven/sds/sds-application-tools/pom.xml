<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>sds</groupId>
	<artifactId>sds-application-tools</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<parent>
		<groupId>com.shadansou.sds</groupId>
		<artifactId>sds</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.name}</Bundle-Name>
						<Bundle-Vendor>shadansou.com</Bundle-Vendor>
						<Private-Package>
							com.shadansou.sds.cassandra.*,
						</Private-Package>
						<Export-Package>
							com.shadansou.sds.cassandra.*,
							com.datastax.driver.core.*,
							io.netty.*,
							!*
						</Export-Package>
						<Import-Package>
							!*
						</Import-Package>
						<Embed-Transitive>true</Embed-Transitive>
						<Embed-Dependency>
							cassandra-driver-core,guava,netty-all,netty-transport,metrics-core,
						</Embed-Dependency>
						<Embed-Directory>lib</Embed-Directory>
						<DynamicImport-Package>*</DynamicImport-Package>
						<_donotcopy>(CVS|.svn|.+.bak|~.+) </_donotcopy>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-searchsyntax</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>bundle</type>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-hazelcast</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-common-radarmanager</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-mdistributor</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast</artifactId>
			<version>3.2</version><!--$NO-MVN-MAN-VER$ -->
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-mongodb</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-cassandra</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-configagent</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-solr-new</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.shadansou.sds</groupId>
			<artifactId>sds-indexcbase-map-new</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.datastax.cassandra</groupId>
			<artifactId>cassandra-driver-core</artifactId>
			<version>2.1.10.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.solr</groupId>
			<artifactId>solr-solrj</artifactId>
			<version>5.5.3</version>
		</dependency>
	</dependencies>
</project>